    <body>
        <partial name="_OnlyHeader" />
        @*main container div starts here*@

        <div class="container mt-5">
            <div class="row"><h1 style="font-weight:400;">Privacy And Cookies Policy</h1></div>
            <div class="row mt-4">
                <div class="col-3" style="border:none;">
                    <div id="list-example" class="list-group">
                        @for(int i = 0; i < Model.Count; i++){
                            <a class="list-group-item list-group-item-action" href="#list-item-@i">@Model[i].Slug</a>
                        }
                        
                    </div>
                </div>
                <div class="col-9">
                    <div data-bs-spy="scroll" data-bs-target="#list-example" data-bs-smooth-scroll="true" class="scrollspy-example" tabindex="0">

                        @for(int j = 0; j < Model.Count; j ++){
                            <div class="intro-div pb-5" id="list-item-@j" style="border-bottom:solid 1px; border-bottom-color:#757575;">
                                <h3 class="pb-3">@Html.Raw(@Model[j].Slug)</h3>
                                
                            </div>
                        }

                        
                    </div>
                </div>
            </div>
        </div>

        @*main container div ends here*@
        
        
    </body>

