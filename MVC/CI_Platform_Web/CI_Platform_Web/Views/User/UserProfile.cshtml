    </head>



    <body>

        <partial name="_OnlyHeader" />

        @*main body starts*@

        <div class="container main-div d-flex justify-content-center mt-5">
            @*user profile img and change password wrapper div starts*@
            <div class="user-img-wrapper" style="border:solid 1px;border-color:gray ; width:330px; height:315px;">
                <div class="img-div pt-4 d-flex justify-content-center align-content-center">
                    <img id="user-profile" src="~/assets/volunteer1.png" style="width:180px; height:180px; border-radius:100px;" />
                    <div class="upload-div">
                        <i class="fas fa-camera-rotate fa-lg upload-button"></i>
                        <input class="file-upload d-none" type="file" accept="image/*" />
                    </div>
                </div>
                <div class="user-name mt-2 d-flex justify-content-center align-content-center"><span style="font-family:NotoSans;font-size:22px;">User Name</span></div>
                <div class="change-passsword mt-2 d-flex justify-content-center align-content-center">
                    @*<a><span style="font-family:NotoSans-Light;font-size:14px;">Change Password</span></a>*@
                    @*change password modal starts here*@

                    <!-- Button trigger modal -->
                    <button type="button" class="btn change-password" data-toggle="modal" data-target="#exampleModal">
                      Launch demo modal
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <div class="container">
                                <div class="row name-surname column-gap-2">

                                    <div class="col name-div mt-3">

                                        <label class="required">Name</label><br />
                                        <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Name" required/>
                                    </div>
                                    <div class="col surname-div mt-3">
                                        <label class="required">Surname</label><br />
                                        <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Surname" required/>
                                    </div>
                                </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn" data-dismiss="modal">Close</button>
                            <button type="button" class="btn">Change Password</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    @*change password modal ends here*@
                </div>
            </div>
            @*user profile img and change password wrapper div ends*@

            @*main form div starts here*@
            <div class="form-div w-75 ps-5">
                <form method="post">
                    @*basic introduction div starts here*@
                    <div class="container w-100 pb-3">
                        <div class="text-div w-100 mb-2" style="border-bottom:solid 1px; border-bottom-color:gray;">
                            <span style="font-family:NotoSans; font-size:22px;">Basic Information</span>
                        </div>
                        @*name surname div starts*@
                        <div class="row name-surname column-gap-2">
                        <div class="col name-div mt-3">
                            <label class="required">Name</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Name" required/>
                        </div>
                        <div class="col surname-div mt-3">
                            <label class="required">Surname</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Surname" required/>
                        </div>
                    </div>
                    @*name surname div ends*@
                    @*employee id and manager div starts*@
                    <div class="row emp-manager-div mt-2 column-gap-2">
                        <div class="col employee-div mt-3">
                            <label>Employee ID</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Employee ID"/>
                        </div>
                        <div class="col surname-div mt-3">
                            <label>Manager</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Manager Details"/>
                        </div>
                    </div>
                    @*employee id and manager div ends*@
                    @*title and dept div starts*@
                    <div class="row title-dept-div mt-2 column-gap-2">
                        <div class="col title-div mt-3">
                            <label>Title</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Title"/>
                        </div>
                        <div class="col dept-div mt-3">
                            <label>Department</label><br />
                            <input type="text" style="width:100%; height:38px;" placeholder="Enter Your Department"/>
                        </div>
                    </div>
                    @*title and dept div ends*@
                    @*my profile div starts*@
                    <div class="row myprofile-div mt-4">
                        <div class="col profile-div">
                            <label class="required">My Profile</label><br />
                        <textarea style="height:120px; width:100%;" placeholder="Enter Your Comments..." required></textarea>
                        </div>
                    </div>
                    @*my profile div ends*@
                    @*why i volunteer div starts*@

                    <div class="row why-i-volunteer-div mt-4">
                        <div class="col whyivolunteer-div">
                            <label>Why I Volunteer?</label><br />
                        <textarea style="height:120px; width:100%;" placeholder="Enter Your Comments..."></textarea>
                        </div>
                    </div>

                    @*why i volunteer div ends*@
                    </div>
                    @*basic introduction div ends here*@
                    @*address information div starts here*@

                    <div class="container w-100 pb-3 mt-4">
                        <div class="text-div w-100 mb-2" style="border-bottom:solid 1px; border-bottom-color:gray;">
                            <span style="font-family:NotoSans; font-size:22px;">Address Information</span>
                        </div>
                        @*city country div starts here*@

                        <div class="row city-country column-gap-2">
                        <div class="col city-div mt-3">
                            <label>City</label><br />
                            <select class="city-dropdown w-100" style="height:38px;">
                                <option value=null>Enter Your City</option>
                                <option>Option1</option>
                                <option>Option2</option>
                                <option>Option3</option>
                                <option>Option4</option>
                            </select>
                        </div>
                        <div class="col country-div mt-3">
                            <label class="required">Country</label><br />
                            <select class="city-dropdown w-100" style="height:38px;" required>
                                <option value=null>Enter Your Country</option>
                                <option>Option1</option>
                                <option>Option2</option>
                                <option>Option3</option>
                                <option>Option4</option>
                            </select>
                        </div>
                    </div>

                        @*city country div ends here*@
                    </div>

                    @*address information div ends here*@
                    @*personal information div starts *@

                    <div class="container w-100 pb-3 mt-4">
                        <div class="text-div w-100 mb-2" style="border-bottom:solid 1px; border-bottom-color:gray;">
                            <span style="font-family:NotoSans; font-size:22px;">Personal Information</span>
                        </div>
                        @*availability and linkedin div starts here*@

                        <div class="row availability-linkedin column-gap-2">
                        <div class="col availability-div mt-3">
                            <label>Availability</label><br />
                            <select class="city-dropdown w-100" style="height:38px;">
                                <option value=null>Select Your Availability</option>
                                <option>Option1</option>
                                <option>Option2</option>
                                <option>Option3</option>
                                <option>Option4</option>
                            </select>
                        </div>
                        <div class="col linkedin-div mt-3">
                            <label>LinkedIn</label><br />
                            <input type="url" style="width:100%; height:38px;" placeholder="Enter Your LinkedIn URL"/>
                        </div>
                    </div>

                        @*availability and linkedin div ends here*@
                    </div>

                    @*personal information div ends *@
                    @*add skills div starts here*@
                    <div class="container w-100 pb-3 mt-4">
                        <div class="text-div w-100 mb-2" style="border-bottom:solid 1px; border-bottom-color:gray;">
                            <span style="font-family:NotoSans; font-size:22px;">Add Skills</span>
                        </div>
                        <div class="row skill-list mb-3 mt-3">
                            <div class="col skills-div" style="height:189px; overflow:auto;">
                                <ul class="myskills" style="list-style-type:none;">
                                    <li>Management</li>
                                    <li>Plumbing</li>
                                    <li>Teaching</li>
                                    <li>MS Office</li>
                                    <li>Maths</li>
                                    <li>Cooking</li>
                                    <li>Management</li>
                                </ul>
                            </div>
                            
                        </div>
                        @*modal for add skills starts here*@
                        <!-- Button trigger modal -->
                        <button type="button" class="btn add-skills-btn" style="width:135px;height:40px;" data-toggle="modal" data-target="#exampleModalCenter">
                              Add Skills
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                              <div class="modal-dialog modal-dialog-centered modal-lg" style="width:906px;" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <span class="modal-title" style="font-family:NotoSans;font-size:22px;" id="exampleModalLongTitle">Add Your Skills</span>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    <div class="main-container d-flex">
                                        <div class="col all-skills">
                                            <select class="w-100 ps-4" name="skills" size="35">
                                                <option>Management</option>
                                                <option>Plumbing</option>
                                                <option>Teaching</option>
                                                <option>MS Office</option>
                                                <option>Maths</option>
                                                <option>Cooking</option>
                                                <option>Management</option>
                                            </select>
                                        </div>
                                        <div class="col user-skills">
                                            <ul style="list-style-type:none;">
                                                <li>Management</li>
                                                <li>Plumbing</li>
                                                <li>Teaching</li>
                                                <li>MS Office</li>
                                                <li>Maths</li>
                                                <li>Cooking</li>
                                                <li>Management</li>
                                            </ul>
                                        </div>
                                    </div>
                                  </div>
                                  <div class="modal-footer me-auto">
                                      
                                          <button type="button" class="btn cancel-btn" data-dismiss="modal">Cancel</button>
                                          <button type="button" class="btn save-btn">Save</button>
                                      
                                    
                                  </div>
                                </div>
                              </div>
                            </div>
                            @*modal for add skills ends here*@
                    </div>
                    @*add skills div ends here*@
                    <div class="container w-100 pb-3 mt-4 d-flex justify-content-end">
                        <button class="submit-btn btn" type="submit">Save</button>
                    </div>

                </form>
            </div>
            @*main form div ends here*@
        </div>

        @*main body ends*@
        <script src="~/js/JavaScript.js"></script>
    </body>



