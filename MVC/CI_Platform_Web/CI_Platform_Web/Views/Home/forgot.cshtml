@{
        ViewData["Title"] = "Forgot Password";
}
@model CI_Platform.Entities.ViewModels.ForgotVm

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Forgot Password</title>
        <link href="~/css/login.css" rel="stylesheet" />
        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/fontawesome.min.css"
              rel="stylesheet" />
    </head>

    <body>
        <div class="content-div d-flex">
            <!--Image Column-->
            <div class="left-box col-md-8">
                <div id="carouselExampleCaptions"
                     class="carousel slide"
                     data-bs-ride="carousel">
                    <div class="carousel-indicators m-4">
                        @if(Model.banners.Count > 0)
                        {
                            @for(int i = 0; i < Model.banners.Count; i++)
                            {
                                <button type="button"
                                data-bs-target="#carouselExampleCaptions"
                                data-bs-slide-to="@i"
                                class=@(i == 0 ? "active" : "")
                                aria-current="true"
                                aria-label="Slide @(i+1)"></button>
                            }
                        }
                    </div>
                    <div class="carousel-inner">
                        @if (Model.banners.Count > 0)
                    {
                        for(int j = 0; j<Model.banners.Count; j++)
                        {
                            <div class="carousel-item @(j==0 ? "active" : "")">
                        <div class="gradient-block">
                            <img src="~/assets/Banner/@Model.banners[j].Image"
                                 class="d-block w-100"
                                 alt="..." />
                        </div>

                        <div class="carousel-caption d-md-block">
                            <h2 class="text-start">
                                @Model.banners[j].Text
                            </h2>
                            
                        </div>
                    </div>
                        }
                    }
                    </div>
                    <button class="carousel-control-prev"
                            type="button"
                            data-bs-target="#carouselExampleCaptions"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next"
                            type="button"
                            data-bs-target="#carouselExampleCaptions"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <!--Prompt Column-->
            <div class="right-box">
                <header>
                </header>

                <div class="row user-input-div">
                    <form method="post" asp-action="forgot" asp-controller="Home">
                    <p class="flex-item fs-6">Forgot Password</p>
                    <p class="flex-item fs-6">
                        Enter your email address you've using for your account below and we
                        will send you a password reset link
                    </p>

                    <div class="flex-item mb-3">
                        <label for="emailadd" class="form-label">Email address</label>
                        <input type="email"
                               class="form-control"
                               asp-for="Email"
                               id="emailadd"
                               placeholder="Enter your email address..." />
                               <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="flex-item submit"
                            class="btn btn-outline-warning mb-3"
                            id="login"
                            formaction="#">
                        Reset Password
                    </button>
                </form>
                    <a class="text-decoration-none link-dark" asp-controller="Home" asp-action="Index"><p class="flex-item fs-6">Login</p></a>
               
                
                </div>
                <div class="row footer">
                    <div class="d-flex justify-content-around h-50">
                        <div class="footer para-text">
                            <a  class="text-decoration-none link-dark">Privacy Policy</a>

                        </div>
                        
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                    crossorigin="anonymous"></script>
    </body>
    </html>