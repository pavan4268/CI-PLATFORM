@using CI_Platform.Entities.ViewModels
@model AdminCMSCreateVm
@{
    ViewData["Title"] = "AdminCMSAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
                    tinymce.init({
                    selector: 'textarea#editor',
                    //statusbar: false,
                    skin: 'bootstrap',
                    plugins: 'lists, link, image, media',
                    toolbar: ' bold italic strikethrough | superscript subscript removeformat ',
                    menubar: false,
                    });
       </script>
            <style>
                .tox-notifications-container {
                    display: none !important;
                }

                .tox-statusbar__text-container {
                    display: none !important;
                }

                .tox.tox-tinymce{
                    height:271px!important;
                }
                .cancel-btn {
                    width: 119px;
                    height: 48px;
                    /*box-shadow: none;*/
                    border: solid 1px;
                    border-color: #757575;
                    border-radius: 100px;
                    text-decoration:none;
                    color:#757575;
                }
                .cancel-btn:hover{
                    color:#757575;
                    text-decoration:none;
                    border:none;
                }
                .save-cms-btn {
                    color: #F88634;
                    width: 109px;
                    height: 48px;
                    border: solid 1px;
                    border-color: #F88634;
                    border-radius: 100px;
                    box-shadow: none;
                    /*text-decoration:none;*/
                }
                /*.save-cms-btn:hover{
                    color: #F88634;
                    text-decoration:none;
                }*/
            </style>
</head>
<body>
    <form method="post">
        <div class="cms-add-main-div pb-5" style="border:solid 1px; border-color:#D9D9D9;">

            <div class="title-div p-0 m-0 w-100" style="height:65px; border-bottom:solid 1px; background-color:#F8F9FC; border-bottom-color:#E8E8E8;">
                <div class="p-3">
                    <span style="font-size:22px;font-weight:400;">Add</span>
                </div>
            
            </div>


            <div class="title-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label>Title</label><br />
                <input type="text" class="form-control" placeholder="Enter CMS Title" asp-for="Title" />
            </div>


            <div class="description-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label>Description</label>
                <textarea asp-for = "Description" id = "editor" placeholder = "Write your Description Here"></textarea>
                
            </div>


            <div class="slug-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label class="required">Slug</label><br />
                <input type="text" class="form-control" placeholder="Enter Slug Details" asp-for="Slug" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>


            <div class="status-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label>Status</label><br />
                <select class="city-dropdown w-100 form-control" id="status-dropdown" required asp-for="Status">
                                <option value=1>Active</option>
                                <option value=0>InActive</option>
                </select>
            </div>
        </div>




        <div class="button-wrapper d-flex justify-content-end mt-4">
            <a class="cancel-btn d-flex justify-content-center me-3" asp-controller="Admin" asp-action="AdminCMSHome">
                <div class="pt-2">
                    <span>Cancel</span>
                </div>
            </a>
            @*<a class="save-cms-btn d-flex justify-content-center" asp-controller="Admin" asp-action="AdminCMSHome">
                <div class="pt-2">
                    <span>Save</span>
                </div>
            </a>*@
            <button class="save-cms-btn btn" type="submit">Save</button>
        </div>
    </form>
</body>

@section scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
}