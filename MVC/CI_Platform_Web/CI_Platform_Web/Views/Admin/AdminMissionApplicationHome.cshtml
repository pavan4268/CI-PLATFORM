@using CI_Platform.Entities.ViewModels
@model List<AdminMissionApplicationDisplayVm>
@{
    ViewData["Title"] = "AdminMissionApplicationHome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        alert("@ViewBag.Message");    
    </script>
}


<div class="title-div" style="border-bottom:solid 1px; border-bottom-color:gray">
                    <h3 style="font-weight:400;">Mission Application</h3>
                </div>
                <div class="search-add-wrapper d-flex justify-content-between mt-3 p-2">
                    <div class="search-wrapper d-flex align-content-center p-2 w-25" style="border:solid 1px;">
                        <i class="bi bi-search"></i>
                        <input type="search" class="ps-2" placeholder="Search" style="border:none;" />
                    </div>
                    <button type="button" class="add-object-btn"><i class="bi bi-plus"></i>&nbsp;Add</button>
                </div>
                <div class="object-table mt-4">
                    <table class="table" id="Admin-table">
                        <thead style="height:80px;">
                            <tr>
                                <th>Mission title</th>
                                <th>Mission id</th>
                                <th>User id</th>
                                <th>Username</th>
                                <th>Applied Date</th>
                                
                                <th style="text-align:end"><span class="pe-2">Action</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(AdminMissionApplicationDisplayVm obj in Model){
                                <tr>
                                <td>@obj.MissionName</td>
                                <td>@obj.MissionId</td>
                                <td>@obj.UserId</td>
                                <td>@obj.UserName</td>
                                <td>@obj.AppliedAt</td>
                                
                                <td>
                                    <div class="icons-div d-flex justify-content-end">
                                        <div class="edit-icon-div">
                                            @*<button type="button" class="object-edit">
                                                <i class="bi bi-check-circle" style="color:green; font-size:x-large"></i>
                                                
                                            </button>*@
                                            <a class="object-edit" asp-controller="Admin" asp-action="AdminApplicationApprove" asp-route-applicationid="@obj.MissionApplicationId">
                                                <i class="bi bi-check-circle" style="color:green; font-size:x-large"></i>
                                                
                                            </a>
                                        </div>
                                        <div class="delete-icon-div">
                                            @*<button type="button" class="object-delete">
                                                <i class="bi bi-x-circle" style="color:red; font-size:x-large"></i>
                                            </button>*@
                                            <a class="object-delete" asp-controller="Admin" asp-action="AdminApplicationDecline" asp-route-applicationid="@obj.MissionApplicationId">
                                                <i class="bi bi-x-circle" style="color:red; font-size:x-large"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>

