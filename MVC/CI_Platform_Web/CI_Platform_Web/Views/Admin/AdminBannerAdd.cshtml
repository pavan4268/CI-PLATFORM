@using CI_Platform.Entities.ViewModels
@model AdminBannerCreateVm
@{
    ViewData["Title"] = "AdminBannerAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if(!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <script type="text/javascript">
        alert('@ViewBag.ErrorMessage');
        </script>
    }
}

<head>
    <style>
                .cancel-btn {
                    width: 119px;
                    height: 48px;
                    /*box-shadow: none;*/
                    border: solid 1px;
                    border-color: #757575;
                    border-radius: 100px;
                    text-decoration:none;
                    color:#757575;
                }
                .cancel-btn:hover{
                    color:#757575;
                    text-decoration:none;
                    border:none;
                }
                .save-banner-btn {
                    color: #F88634;
                    width: 109px;
                    height: 48px;
                    border: solid 1px;
                    border-color: #F88634;
                    border-radius: 100px;
                    box-shadow: none;
                    /*text-decoration:none;*/
                }
    </style>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        <div class="cms-add-main-div pb-5" style="border:solid 1px; border-color:#D9D9D9;">

            <div class="title-div p-0 m-0 w-100" style="height:65px; border-bottom:solid 1px; background-color:#F8F9FC; border-bottom-color:#E8E8E8;">
                <div class="p-3">
                    <span style="font-size:22px;font-weight:400;">Add</span>
                </div>
            
            </div>

            <div class="img-div pt-4 d-flex justify-content-center align-content-center">
                <img id="user-profile" src="~/assets/Grow-Trees-On-the-path-to-environment-sustainability-login.png" style="width:300px; height:250px; border-radius:10px;" />
                <div class="upload-div ps-3">
                    @*<i class="fas fa-camera-rotate fa-lg upload-button"></i>*@
                    <i class="bi bi-camera upload-button"></i>
                        
                    <input class="file-upload d-none" type="file" asp-for="BannerImage" accept="image/*" />
                </div>

            </div>
            <div class="d-flex justify-content-center">
                <span asp-validation-for="BannerImage" class="text-danger"></span>
            </div>
            
            <div class="imgtxt-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label>Image Text</label><br />
                <input type="text" class="form-control" placeholder="Enter Image Text" asp-for="Text" />
            </div>

            <div class="sort-input-wrapper pe-0 ps-3 mt-4 me-0">
                <label>Sort Order</label><br />
                <input type="number" class="form-control" placeholder="Enter Sort Order" asp-for="SortOrder" />
            </div>
            


            
        </div>




        <div class="button-wrapper d-flex justify-content-end mt-4">
            <a class="cancel-btn d-flex justify-content-center me-3" asp-controller="Admin" asp-action="AdminBannerHome">
                <div class="pt-2">
                    <span>Cancel</span>
                </div>
            </a>
            @*<a class="save-cms-btn d-flex justify-content-center" asp-controller="Admin" asp-action="AdminCMSHome">
                <div class="pt-2">
                    <span>Save</span>
                </div>
            </a>*@
            <button class="save-banner-btn btn" type="submit">Save</button>
        </div>
    </form>
</body>

