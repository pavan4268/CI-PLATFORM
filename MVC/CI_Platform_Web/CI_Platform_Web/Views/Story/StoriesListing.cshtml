@using CI_Platform.Entities.ViewModels

@model List<StoryListingVm>



<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volunteering Mission Page</title>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/StoriesListing.css" rel="stylesheet" />
  </head>

  <body>
    <partial name = "_OnlyHeader" />
    <!-- banner image wrapper starts here -->
    <div
      class="container d-flex align-content-center justify-content-center img-wrapper p-0 m-0"
    >
      <img
        src="~/assets/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
        class="banner-img w-100"
        alt=""
      />
      <!-- image hover content starts -->
      <div class="banner-hover-content container">
        <div
          class="container img-hover-content d-flex justify-content-center align-content-center"
        >
          <span class="img-txt">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Molestiae,
            voluptatibus qui libero fugiat nulla vero mollitia cumque nihil
            totam esse nisi fuga hic velit ab.
          </span>
        </div>
        <div
          class="container d-flex justify-content-center align-content-center mt-2"
        >
        <a asp-action="ShareYourStory" asp-controller="Story">
          <button
            class="story-details-btn d-flex justify-content-center align-content-center p-2" 
          >
            Share Your Story
            <div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-arrow-right"
                viewBox="0 0 16 16"
              >
                <path
                  fill-rule="evenodd"
                  d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
                />
              </svg>
            </div>
          </button>
          </a>
        </div>
      </div>
      <!-- image hover content ends -->
    </div>
    <!-- banner image wrapper ends here -->
    <!-- container consisting story card rows starts  -->
    <div class="container card-wrapper col-10 pt-4">
      <div class="row row-cols-1 row-cols-xl-3 row-cols-md-2">
          @foreach(var card in Model)
            {
                
            
            <!-- card one begins -->
                <div class="col p-2 d-flex">
                  <div class="card">
                    <!-- div wrapping img and buttons on it starts -->
                    <div class="img-button p-0 m-0">
                      <img
                        class="card-img-top"
                        src="~/assets/Grow-Trees-On-the-path-to-environment-sustainability.png"
                        alt="Card image cap"
                      />
                      <div class="story-img-hover">
                          <a asp-action="StoryDetails" asp-controller="Story" asp-route-storyid=@card.Storyid>
                        <button class="view-details-btn">
                          View Details
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            fill="currentColor"
                            class="bi bi-arrow-right"
                            viewBox="0 0 16 16"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
                            />
                          </svg>
                        </button>
                        </a>
                      </div>
                    </div>
                    <!-- div wrapping img and buttons on it ends -->
                    <div class="mission-theme p-1">
                      <span class="theme-txt">@card.MissionTheme</span>
                    </div>

                    <div class="container card-body">
                      <!-- mission title starts here -->
                      <div class="row">
                        <h5 class="card-title">
                          @card.StoryTitle
                        </h5>
                      </div>
                      <!-- mission title ends here -->
                      <!-- mission text starts here -->
                      <div class="row">
                        <p class="card-text">
                          @Html.Raw(@card.StoryDescription)
                        </p>
                      </div>
                      <!-- mission text ends here -->
                      <!-- user-commented wrapper div starts here -->
                      <div class="row mt-3 d-flex align-content-center">
                        <div
                          class="col-4 commenter-img mr-3 d-flex align-content-center"
                        >
                          <img
                            src="~/assets/volunteer1.png"
                            class="commenter-img"
                            alt=""
                          />
                        </div>
                        <div class="col commenter-name d-flex align-content-center">
                          @card.UserName
                        </div>
                      </div>
                      <!-- user-commented wrapper div ends here -->
                    </div>
                  </div>
                </div>
                }
                <!-- card one ends -->
       
      </div>
    </div>
  </body>
  <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.js"
  ></script>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"
  ></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
</html>
