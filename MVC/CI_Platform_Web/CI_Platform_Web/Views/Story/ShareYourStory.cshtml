  <body>
      <partial name="_OnlyHeader" />
      @*main div starts here*@
      <div class="container col-10">
          <h1 class="share-title pt-5" style="font-weight:100">Share Your Story</h1>
         @*div wrapping select mission, story title and date starts*@
          <div class="row row-cols-1 row-cols-xl-3 row-cols-md-2 main-select-div d-flex ps-2">
               @*select mission main div starts here*@
              <div class="selectiondiv col p-0 m-0 mt-4 pe-5">
                  <label class="selectdiv-title" for="mission-select">Select Mission</label><br />
                  <select class="mission-select w-100 mt-2" id="mission-select" style="height:38px">
                      <option>Select Your Mission</option>
                      <option>Option2</option>
                  </select>
              </div>
               @*select mission main div ends here*@
               @*story details main div starts here*@
              <div class="story-details-div col p-0 m-0 mt-4 pe-5">
                  <label class="story-title" for="storydesc">My Story title</label><br />
                  <input type="text" class="story-title w-100 mt-2" id="storydesc" style="height:38px" placeholder="Enter Story Title">
              </div>
              @*story details main div ends here*@
              @*date selection main div starts here*@
              <div class="date-selection-div col p-0 m-0 mt-4 pe-xl-2 pe-5">
                  <label class="selectdiv-title" for="date-select">Date</label><br />
                  <input type="date" class="date-in w-100 mt-2" id="date-select" style="height:38px" placeholder="Date">
              </div>
              @*date selection main div starts here*@
          </div>
         @*div wrapping select mission, story title and date ends*@
         @*story description div starts here*@
         <div class="story-details-main-div p-0 m-0 pt-3 mt-3">
             <label class="my-story-txt p-0 m-0" for="story-description">My Story</label>
             <div class="texteditor w-100" style="margin-top:5px">
                 <div id="editor">Enter Your Story</div>
             </div>
         </div>
         @*story description div ends here*@
         <div class="video-main-div pt-3 mt-3">
             <label class="video-url-txt"for="video-url">Enter Video URL</label>
             <input type="url" class="video-path w-100 mt-2" id="video-url" style="height:38px" placeholder="Enter your url"/>
         </div>
      </div>
      @*main div ends here*@
       <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
           
    </script>
  </body>
